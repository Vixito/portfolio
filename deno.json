{
  "importMap": "./import_map.json",
  "tasks": {
    "dev": "deno run -A npm:vite",
    "dev:doppler": "echo 'Use: doppler run -- deno task dev'",
    "build": "deno cache --reload --node-modules-dir=auto src/main.tsx vite.config.ts npm:vite npm:@vitejs/plugin-react && deno run --allow-all --no-check --node-modules-dir=auto npm:vite build",
    "build:doppler": "echo 'Use: doppler run -- deno task build'",
    "preview": "deno run -A npm:vite preview",
    "format": "deno run -A npm:@biomejs/biome format --write .",
    "lint": "deno run -A npm:@biomejs/biome lint .",
    "check": "deno run -A npm:@biomejs/biome check --write .",
    "deploy": "deno task build && deno deploy --project=vixis-portfolio main.ts"
  },
  "nodeModulesDir": "auto",
  "deploy": {
    "project": "vixis-portfolio",
    "entrypoint": "./main.ts",
    "exclude": [
      "**/node_modules/**",
      "node_modules/**",
      "dist/**",
      "dist-ssr/**",
      ".git/**",
      ".cursor/**",
      ".vscode/**",
      ".idea/**",
      "*.log",
      "*.local",
      ".DS_Store",
      "Thumbs.db",
      "cloudbuild.yaml",
      "BingSiteAuth.xml",
      "docs.md",
      "README.md",
      "start.sh",
      "stream.sh",
      "liquidsoap-setup.sh",
      "radio-streaming-liquidsoap.service",
      "radio.liq",
      "update-playlist.sh",
      "start-liquidsoap.sh",
      "start-icecast.sh",
      "Dockerfile.cloudrun",
      "Dockerfile.icecast",
      "icecast.xml",
      "supabase/.temp/**",
      "supabase/.branches/**",
      "*.key",
      "*.pem",
      "*.p12",
      "*.pfx",
      "secrets/**",
      ".secrets/**",
      ".doppler/**",
      "doppler.yaml",
      "doppler.yml",
      "coverage/**",
      "*.test.ts",
      "*.test.tsx",
      "*.spec.ts",
      "*.spec.tsx",
      "results.txt",
      "*.tmp",
      "*.temp"
    ]
  }
}
